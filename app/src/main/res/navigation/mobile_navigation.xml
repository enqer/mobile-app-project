<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.flextube.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_shorts"
        android:name="com.example.flextube.ui.shorts.shortsFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_shorts" />

    <fragment
        android:id="@+id/navigation_library"
        android:name="com.example.flextube.ui.library.LibraryFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_library" />
</navigation>