<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:background="?attr/customBgColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/IV_playlistItem_template"
                android:layout_width="130dp"
                android:layout_height="90dp"
                app:srcCompat="@drawable/app_logo_black" />

            <TextView
                android:id="@+id/TV_playlistItem_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="5dp"
                android:text="title"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TV_playlistItem_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="30dp"
                android:textSize="14sp"
                android:text="Author" />

            <ImageView
                android:id="@+id/IV_playlistItem_user"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="55dp"
                app:srcCompat="@drawable/person" />
        </FrameLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>